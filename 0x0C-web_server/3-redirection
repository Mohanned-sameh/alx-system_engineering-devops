#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.

# Install Nginx
apt-get -y update
apt-get -y install nginx

sed -i 's|listen 80 default_server|listen 80 default_server\n\trewrite ^/redirect_me http://google.com permanent|' /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart
