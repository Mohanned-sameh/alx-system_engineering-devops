#!/usr/bin/env bash
#  A Script that configures a new Ubuntu machine to Perform a 301-redirection

# Upadating Packages before Installations
sudo apt-get update
sudo apt-get install -y nginx

# Creating an index.html page
echo "Hello World!" | sudo tee /var/www/html/index.html

newconfig=
"server
{
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;

    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
    location /redirect_me {
        return 301 https://youtube.com/watch?v=QH2-TGUlwu4;
    }
}"

# Adding the new configuration to the default file
sudo echo "$newconfig" | sudo tee /etc/nginx/sites-available/default

# Restarting Nginx service
sudo service nginx restart